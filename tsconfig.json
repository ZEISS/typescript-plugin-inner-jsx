{
  "compilerOptions": {
    "allowUnreachableCode": false,
    "target": "es6",
    "module": "commonjs",
    "jsx": "react",
    "declaration": true,
    "sourceMap": false,
    "outDir": "./dist/",
    "rootDir": "./src",
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "moduleResolution": "node",
    "baseUrl": "."
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "src/__tests__", "src/runner.ts", "example"]
}
